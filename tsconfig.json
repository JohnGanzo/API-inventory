{
   "compilerOptions": {
      "lib": [
         
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "baseUrl": "./src"
   },
   "include": ["src"],
   "exclude": ["node_modules"]
}